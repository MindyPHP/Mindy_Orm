{
    "name": "mindy/orm",
    "homepage": "https://github.com/MindyPHP/Orm",
    "license": "MIT",
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Mindy\\Orm\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mindy\\Orm\\Tests\\": ""
        }
    },
    "require": {
        "php": ">=7.0",
        "doctrine/common": "~2.0|~3.0",
        "doctrine/dbal": "~2.0|~3.0",
        "mindy/query_builder": ">=4.0",
        "symfony/event-dispatcher": "~3.0|~4.0",
        "symfony/validator": "~3.0|~4.0"
    },
    "suggested": {
        "league/flysystem": "For storing files",
        "mindy/orm-fields": "Collection of extra fields: IpField, JsonField",
        "mindy/orm-file-field": "For FileField and ImageField",
        "mindy/orm-slug-field": "For Slug and AutoSlug fields",
        "mindy/orm-nested-set": "Nested set for Mindy Orm"
    },
    "authors": [
        {
            "name": "Maxim Falaleev",
            "email": "max@studio107.ru",
            "homepage": "http://studio107.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/MindyPHP/Mindy/issues?state=open"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    }
}
